{% extends "_layouts/cp" %}

{% set title = "Edit Link"|t('social-media') %}

{% block content %}
	<form method="post" novalidate accept-charset="UTF-8">
		{{ csrfInput() }}
		{{ actionInput('social-media/social-media/save') }}
		{{ redirectInput('social-media') }}
		{{ hiddenInput('id', link.id) }}
		{{ hiddenInput('site', currentSite.handle) }}

		{% include "social-media/_includes/fields" with {
			link: link,
			settings: settings,
			currentSite: currentSite,
			submitLabel: 'Save'|t('social-media')
		} %}
	</form>
{% endblock %}
